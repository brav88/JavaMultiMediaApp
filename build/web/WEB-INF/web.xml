<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>getMoviesServlet</servlet-name>
        <servlet-class>multimedia.movies.getMoviesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getSeriesServlet</servlet-name>
        <servlet-class>multimedia.series.getSeriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveMovieServlet</servlet-name>
        <servlet-class>multimedia.movies.saveMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadMovieServlet</servlet-name>
        <servlet-class>multimedia.movies.loadMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateMovieServlet</servlet-name>
        <servlet-class>multimedia.movies.updateMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteMovieServlet</servlet-name>
        <servlet-class>multimedia.movies.deleteMovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMoviesServlet</servlet-name>
        <url-pattern>/getMoviesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getSeriesServlet</servlet-name>
        <url-pattern>/getSeriesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveMovieServlet</servlet-name>
        <url-pattern>/saveMovieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadMovieServlet</servlet-name>
        <url-pattern>/loadMovieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateMovieServlet</servlet-name>
        <url-pattern>/updateMovieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteMovieServlet</servlet-name>
        <url-pattern>/deleteMovieServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
